@page
@model LoginModel
@{
    ViewData["Title"] = "ورود به سامانه";
}

<h2>ورود به سامانه</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p style="color:red">@Model.Message</p>
}

<form method="post">
    <input type="text" asp-for="NationalCode" placeholder="کد ملی" />
    <input type="password" asp-for="Password" placeholder="رمز عبور" />
    <button type="submit">ورود</button>
</form>

<form method="post" asp-page-handler="Guest">
    <button type="submit">ورود به عنوان مهمان</button>
</form>

<style>
    form {
        display: flex;
        flex-direction: column;
        width: 300px;
        margin: 20px auto;
    }

    input, button {
        margin: 5px 0;
        padding: 8px;
    }
</style>